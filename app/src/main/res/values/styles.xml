<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tab Text Style -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>
    
    <!-- Button Style -->
    <style name="CoffeeButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/coffee_brown</item>
        <item name="android:elevation">4dp</item>
        <item name="rippleColor">@color/beige_cream</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <!-- Outlined Button Style -->
    <style name="CoffeeOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/light_brown</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/coffee_brown</item>
        <item name="backgroundTint">@color/cream</item>
        <item name="android:elevation">2dp</item>
        <item name="rippleColor">@color/light_brown</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <!-- Text Label Style -->
    <style name="CoffeeTextLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
    
    <!-- Checkbox Style -->
    <style name="CoffeeCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:buttonTint">@color/coffee_brown</item>
    </style>
    
    <!-- EditText Style -->
    <style name="CoffeeEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColorHint">@color/light_gray</item>
    </style>
    
    <!-- Link Text Style -->
    <style name="CoffeeLink">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/coffee_brown</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Icon Button Style -->
    <style name="CoffeeIconButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">8dp</item>
        <item name="android:tint">@color/coffee_brown</item>
    </style>
</resources> 